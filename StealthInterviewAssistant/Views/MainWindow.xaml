<Window x:Class="StealthInterviewAssistant.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Stealth Interview Assistant" Height="650" Width="700"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        Topmost="True"
        Opacity="1.0"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        SourceInitialized="Window_SourceInitialized"
        Cursor="Arrow">
    <Window.Resources>
        <!-- Animation for the main border -->
        <Storyboard x:Key="BorderFadeInAnimation">
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                             Storyboard.TargetProperty="Opacity"
                             From="0.0"
                             To="1.0"
                             Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="0.92"
                             To="1.0"
                             Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="0.92"
                             To="1.0"
                             Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Button Animation Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ButtonScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#4EC9B0"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.15"
                                                           Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.15"
                                                           Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleX"
                                                           To="1.0"
                                                           Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                           Storyboard.TargetProperty="ScaleY"
                                                           To="1.0"
                                                           Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#D02D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#D03F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <!-- RepeatButton Style for Slider -->
        <Style x:Key="RepeatButtonStyle" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="#404040" Height="2" CornerRadius="1" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4EC9B0"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4EC9B0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3D3D40"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0.8"
                                                           Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="1.0"
                                                           Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Radio Button Style -->
        <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4EC9B0"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4EC9B0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3D3D40"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0.8"
                                                           Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Border"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="1.0"
                                                           Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4EC9B0"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#4EC9B0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3A9B8A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Custom ScrollBar Style -->
        <Style x:Key="CustomScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="1.5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="GridRoot" Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.00001*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="0.00001*"/>
                            </Grid.RowDefinitions>
                            <Track x:Name="PART_Track" 
                                  Grid.Row="1"
                                  IsDirectionReversed="True"
                                  Focusable="False">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#604EC9B0" 
                                                       CornerRadius="2"
                                                       Margin="0,1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Resize Border -->
    <Border x:Name="MainBorder"
            BorderThickness="0" 
            CornerRadius="8"
            Background="Transparent"
            MouseDown="Border_MouseDown"
            Opacity="1.0"
            RenderTransformOrigin="0.5,0.5"
            Cursor="Arrow">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
        </Border.RenderTransform>
        <Grid Cursor="Arrow">
            <!-- Dark dashed border (static) -->
            <Rectangle x:Name="BorderPath"
                       StrokeThickness="2"
                       StrokeDashArray="4,4"
                       Stroke="#D03F3F46"
                       Fill="Transparent"
                       RadiusX="8"
                       RadiusY="8"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <ScaleTransform ScaleX="0.1" ScaleY="0.1"/>
                </Rectangle.RenderTransform>
            </Rectangle>
            <!-- Rotating light overlay -->
            <Rectangle x:Name="LeonLightPath"
                       StrokeThickness="2"
                       StrokeDashArray="2,6"
                       Fill="Transparent"
                       RadiusX="8"
                       RadiusY="8"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"/>
            <Grid x:Name="ContentGrid" MouseDown="Grid_MouseDown" Visibility="Hidden" Cursor="Arrow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0" Cursor="Arrow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="CaptionColumn" Width="5*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
        
        <!-- Left Column: Caption Panel -->
        <Border x:Name="LeftPanel"
                Grid.Row="0"
                Grid.Column="0" 
                Background="#D0252526" 
                BorderBrush="#D03F3F46" 
                BorderThickness="1" 
                CornerRadius="8"
                Margin="10, 10, 5, 10"
                Opacity="0"
                RenderTransformOrigin="0.5,0.5"
                Cursor="Arrow">
            <Border.RenderTransform>
                <TranslateTransform X="-30"/>
            </Border.RenderTransform>
            <Grid Cursor="Arrow">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Buttons Row -->
                <Grid Grid.Row="0" 
                      Margin="10,10,10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left side: Buttons and Slider -->
                    <StackPanel Grid.Column="0"
                               Orientation="Horizontal" 
                               HorizontalAlignment="Left">
                        <Button Command="{Binding StartCaptionsCommand}"
                                Width="28" Height="28"
                                ToolTip="{Binding StartStopButtonTooltip}">
                            <TextBlock Text="{Binding StartStopButtonIcon}" FontSize="12" FontFamily="Segoe UI Symbol"/>
                        </Button>
                        <Button Command="{Binding CopyDeltaCommand}"
                                Width="28" Height="28"
                                ToolTip="Copy new text since last copy">
                            <TextBlock Text="ðŸ“‹" FontSize="12"/>
                        </Button>
                        <Button Command="{Binding ClearBufferCommand}"
                                Width="28" Height="28"
                                ToolTip="Clear transcript buffer">
                            <TextBlock Text="âœ–" FontSize="12" FontFamily="Segoe UI Symbol"/>
                        </Button>
                        
                        <!-- Font Size Slider -->
                        <Border Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                VerticalAlignment="Center"
                                Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal"
                                       VerticalAlignment="Center">
                                <Slider x:Name="CaptionTextSizeSlider"
                                        Minimum="12"
                                        Maximum="18"
                                        Value="15"
                                        Width="80"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        ValueChanged="CaptionTextSizeSlider_ValueChanged"
                                        ToolTip="Adjust caption text font size">
                                    <Slider.Style>
                                        <Style TargetType="Slider">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="#4EC9B0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Slider">
                                                        <Grid VerticalAlignment="Center">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="13"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <Track Grid.Row="1" x:Name="PART_Track" VerticalAlignment="Center">
                                                                <Track.DecreaseRepeatButton>
                                                                    <RepeatButton Style="{StaticResource RepeatButtonStyle}" Command="Slider.DecreaseLarge" />
                                                                </Track.DecreaseRepeatButton>
                                                                <Track.Thumb>
                                                                    <Thumb x:Name="Thumb" Width="13" Height="13" VerticalAlignment="Center">
                                                                        <Thumb.Template>
                                                                            <ControlTemplate TargetType="Thumb">
                                                                                <Ellipse Fill="#4EC9B0" Stroke="#80FFFFFF" StrokeThickness="1.5"/>
                                                                            </ControlTemplate>
                                                                        </Thumb.Template>
                                                                    </Thumb>
                                                                </Track.Thumb>
                                                                <Track.IncreaseRepeatButton>
                                                                    <RepeatButton Style="{StaticResource RepeatButtonStyle}" Command="Slider.IncreaseLarge" />
                                                                </Track.IncreaseRepeatButton>
                                                            </Track>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Slider.Style>
                                </Slider>
                                <TextBlock x:Name="CaptionTextSizeLabel"
                                          Text="15"
                                          Foreground="#4EC9B0"
                                          FontSize="12"
                                          FontWeight="Bold"
                                          VerticalAlignment="Center"
                                          Margin="8,0,0,0"
                                          MinWidth="25"
                                          TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Right side: Status Light Indicator -->
                    <Ellipse Grid.Column="2"
                            x:Name="StatusLight"
                            Width="15" Height="15"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding StatusLightColor}"/>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <DropShadowEffect Color="{Binding StatusLightColor}" 
                                             BlurRadius="10" 
                                             ShadowDepth="0"
                                             Opacity="0.7"/>
                        </Ellipse.Effect>
                        <Ellipse.ToolTip>
                            <TextBlock Text="{Binding StatusMessage}"/>
                        </Ellipse.ToolTip>
                    </Ellipse>
                </Grid>
                
                <!-- Status and Hotkey -->
                <StackPanel Grid.Row="1" 
                           Orientation="Vertical"
                           Margin="10,0,10,5">
                    <!-- Text Size Control removed - moved to button groups area -->
                </StackPanel>
                
                <!-- Caption Box -->
                <Border Grid.Row="2" 
                       Background="#D01E1E1E" 
                       BorderBrush="#D03F3F46" 
                       BorderThickness="1" 
                       CornerRadius="4"
                       Margin="10,0,10,10">
                    <ScrollViewer x:Name="CaptionScrollViewer"
                                 VerticalScrollBarVisibility="Hidden" 
                                 HorizontalScrollBarVisibility="Disabled"
                                 Background="Transparent"
                                 ScrollChanged="CaptionScrollViewer_ScrollChanged">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                        </ScrollViewer.Resources>
                        <TextBlock x:Name="CaptionTextBlock"
                                  Text="{Binding Transcript}" 
                                  TextWrapping="Wrap"
                                  Padding="15"
                                  FontSize="15"
                                  FontFamily="Consolas"
                                  Foreground="#D4D4D4"
                                  Background="Transparent"
                                  Opacity="0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="15"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
        
        <!-- Splitter with thin dash and thick transparent control area -->
        <Border Grid.Row="0"
                Grid.Column="1" 
                HorizontalAlignment="Center"
                Width="5"
                Background="Transparent"
                x:Name="SplitterBorder">
            <Rectangle x:Name="SplitterRectangle"
                      Stroke="#803F3F46" 
                      StrokeThickness="2.5"
                      StrokeDashArray="3,3"
                      Fill="Transparent"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Center"
                      Width="2.5"
                      Opacity="0"
                      RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <ScaleTransform ScaleY="0"/>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Border>
        <GridSplitter Grid.Row="0"
                     Grid.Column="1" 
                     HorizontalAlignment="Stretch" 
                     Background="Transparent"
                     Width="5"
                     ResizeBehavior="PreviousAndNext"/>
        
        <!-- Right Column: Stealth Browser -->
        <Border x:Name="RightPanel"
                Grid.Row="0"
                Grid.Column="2" 
                Background="#D0252526" 
                BorderBrush="#D03F3F46" 
                BorderThickness="1" 
                CornerRadius="8"
                Margin="5, 10, 8, 10"
                Opacity="0"
                RenderTransformOrigin="0.5,0.5"
                Cursor="Arrow">
            <Border.RenderTransform>
                <TranslateTransform X="30"/>
            </Border.RenderTransform>
            <Grid Cursor="Arrow">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Address Bar -->
                <Border Grid.Row="0" 
                       Background="Transparent" 
                       BorderBrush="#D03F3F46" 
                       BorderThickness="0,0,0,1"
                       CornerRadius="8,8,0,0"
                       Padding="10">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <!-- <ColumnDefinition Width="*"/> -->
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <!-- <ColumnDefinition Width="Auto"/> -->
                        </Grid.ColumnDefinitions>
                        
                        <!-- <TextBox Grid.Column="0" 
                                x:Name="AddressBar"
                                Text="{Binding BrowserUrl, UpdateSourceTrigger=LostFocus}"
                                Margin="0,0,10,0"
                                KeyDown="AddressBar_KeyDown"/> -->
                        
                        <Button Grid.Column="0" 
                               x:Name="ChatGPTButton"
                               Click="ChatGPTButton_Click"
                               Width="28" Height="28"
                               Margin="0,0,5,0"
                               ToolTip="Open ChatGPT">
                            <TextBlock Text="CG" FontSize="12"/>
                        </Button>
                        
                        <Button Grid.Column="1" 
                               x:Name="DeepSeekButton"
                               Click="DeepSeekButton_Click"
                               Width="28" Height="28"
                               Margin="0,0,5,0"
                               ToolTip="Open DeepSeek">
                            <TextBlock Text="D" FontSize="12"/>
                        </Button>
                        
                        <Button Grid.Column="2" 
                               x:Name="PerplexityButton"
                               Click="PerplexityButton_Click"
                               Width="28" Height="28"
                               Margin="0,0,5,0"
                               ToolTip="Open Perplexity">
                            <TextBlock Text="P" FontSize="12"/>
                        </Button>
                        
                        <Button Grid.Column="3" 
                               x:Name="GrokButton"
                               Click="GrokButton_Click"
                               Width="28" Height="28"
                               Margin="0,0,0,0"
                               ToolTip="Open Grok">
                            <TextBlock Text="G" FontSize="12"/>
                        </Button>
                        
                        <!-- <Button Grid.Column="4" 
                               x:Name="GoButton"
                               Click="GoButton_Click"
                               Width="28" Height="28"
                               ToolTip="Navigate">
                            <TextBlock Text="â†’" FontSize="12" FontFamily="Segoe UI Symbol"/>
                        </Button> -->
                    </Grid>
                </Border>
                
                <!-- WebView2 -->
                <Border Grid.Row="1" 
                       Background="Transparent" 
                       BorderThickness="0"
                       Margin="10"
                       Cursor="Arrow">
                    <wv2:WebView2 x:Name="StealthBrowser" 
                                  Source="{Binding BrowserUrl}"
                                  Cursor="Arrow"/>
                </Border>
            </Grid>
        </Border>
            </Grid>
            
            <!-- Button Groups Row -->
            <Grid Grid.Row="1" Grid.Column="0" 
                  Margin="10,0,10,10"
                  x:Name="ButtonGroupsContainer"
                  Opacity="0"
                  Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Button Group: Toggle Buttons -->
                <Border Grid.Column="0"
                        Background="#D0252526"
                        BorderBrush="#D03F3F46"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                        </ScrollViewer.Resources>
                        <WrapPanel x:Name="ToggleButtonsPanel"
                                  Orientation="Horizontal">
                            <ToggleButton x:Name="ToggleProfessional"
                                         Content="Professional"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Checked="ToggleButton_Checked"
                                         Unchecked="ToggleButton_Unchecked"/>
                            <ToggleButton x:Name="ToggleInteresting"
                                         Content="Funny"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Checked="ToggleButton_Checked"
                                         Unchecked="ToggleButton_Unchecked"/>
                            <ToggleButton x:Name="ToggleSTAR"
                                         Content="STAR"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Checked="ToggleButton_Checked"
                                         Unchecked="ToggleButton_Unchecked"/>
                            <ToggleButton x:Name="ToggleSharp"
                                         Content="Sharp"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Checked="ToggleButton_Checked"
                                         Unchecked="ToggleButton_Unchecked"/>
                            <ToggleButton x:Name="ToggleCreative"
                                         Content="Creative"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Checked="ToggleButton_Checked"
                                         Unchecked="ToggleButton_Unchecked"/>
                            <ToggleButton x:Name="ToggleMentioning"
                                         Content="Specific"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Checked="ToggleButton_Checked"
                                         Unchecked="ToggleButton_Unchecked"/>
                            <ToggleButton x:Name="ToggleStoryMode"
                                         Content="Story mode"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Checked="ToggleButton_Checked"
                                         Unchecked="ToggleButton_Unchecked"/>
                            <ToggleButton x:Name="ToggleImpactful"
                                         Content="Impactful"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Checked="ToggleButton_Checked"
                                         Unchecked="ToggleButton_Unchecked"/>
                            <ToggleButton x:Name="ToggleTechStack"
                                         Content="Tech stack versions"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Checked="ToggleButton_Checked"
                                         Unchecked="ToggleButton_Unchecked"/>
                            <ToggleButton x:Name="ToggleDetailed"
                                         Content="Detailed"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Checked="ToggleButton_Checked"
                                         Unchecked="ToggleButton_Unchecked"/>
                            <ToggleButton x:Name="ToggleStepByStep"
                                         Content="Step-by-Step"
                                         Style="{StaticResource ToggleButtonStyle}"
                                         Checked="ToggleButton_Checked"
                                         Unchecked="ToggleButton_Unchecked"/>
                        </WrapPanel>
                    </ScrollViewer>
                </Border>   
                
                <!-- Middle Button Group: Radio Buttons for Duration -->
                <Border Grid.Column="2"
                        Background="#D0252526"
                        BorderBrush="#D03F3F46"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10">
                    <StackPanel Orientation="Vertical"
                               HorizontalAlignment="Stretch">
                        <RadioButton x:Name="Radio1Min"
                                    Content="1 min"
                                    Style="{StaticResource RadioButtonStyle}"
                                    GroupName="DurationGroup"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,4,0,4"
                                    IsChecked="True"/>
                        <RadioButton x:Name="Radio1To2Mins"
                                    Content="1-2mins"
                                    Style="{StaticResource RadioButtonStyle}"
                                    GroupName="DurationGroup"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,4,0,4"/>
                        <RadioButton x:Name="Radio2To3Mins"
                                    Content="2-3mins"
                                    Style="{StaticResource RadioButtonStyle}"
                                    GroupName="DurationGroup"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Right Button Group: Action Buttons -->
                <Border Grid.Column="4"
                        Background="#D0252526"
                        BorderBrush="#D03F3F46"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" 
                              VerticalAlignment="Stretch"
                              Margin="0,0,8,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0"
                                   x:Name="FollowUpButton"
                                   Content="FollowUp"
                                   Click="FollowUpButton_Click"
                                   Style="{StaticResource ActionButtonStyle}"
                                   VerticalAlignment="Stretch"
                                   Height="Auto"/>
                            <Button Grid.Row="2"
                                   x:Name="ClarifyButton"
                                   Content="Clarify"
                                   Click="ClarifyButton_Click"
                                   Style="{StaticResource ActionButtonStyle}"
                                   VerticalAlignment="Stretch"
                                   Height="Auto"/>
                        </Grid>
                        <Grid Grid.Column="1"
                              VerticalAlignment="Stretch"
                              Margin="-2">
                            <Button x:Name="AnswerButton"
                                   Content="Answer"
                                   Click="AnswerButton_Click"
                                   Style="{StaticResource ActionButtonStyle}"
                                   VerticalAlignment="Stretch"
                                   Height="Auto"
                                   MinHeight="80"
                                   Margin="2"/>
                            <!-- Rotating neon light border -->
                            <Rectangle x:Name="AnswerButtonNeonLight"
                                      StrokeThickness="2"
                                      Fill="Transparent"
                                      RadiusX="4"
                                      RadiusY="4"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Control Panel: Right Side Button Group -->
            <Border x:Name="ControlPanel"
                    Grid.Column="1"
                    Grid.RowSpan="2"
                    Margin="0,10,10,10"
                    VerticalAlignment="Stretch"
                    Cursor="Arrow">
                    <!--
                    Background="#D0252526"
                    BorderBrush="#D03F3F46"
                    BorderThickness="1"
                    CornerRadius="8,8,8,8"
                    Padding="6"
                    -->
                <StackPanel Orientation="Vertical"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                    <Button x:Name="ArrowCursorButton"
                           Content="A"
                           Width="28" Height="28"
                           MinWidth="28" MaxWidth="28"
                           Margin="0,4,0,4"
                           ToolTip="Use Arrow cursor system"
                           Click="ArrowCursorButton_Click"
                           Style="{StaticResource ActionButtonStyle}"/>
                    <Button x:Name="CaretCursorButton"
                           Content="I"
                           Width="28" Height="28"
                           MinWidth="28" MaxWidth="28"
                           Margin="0,4,0,4"
                           ToolTip="Use Caret cursor system"
                           Click="CaretCursorButton_Click"
                           MouseEnter="CaretCursorButton_MouseEnter"
                           MouseLeave="CaretCursorButton_MouseLeave"
                           Style="{StaticResource ActionButtonStyle}"/>
                </StackPanel>
            </Border>
            </Grid>
            <!-- Startup Animation Label - Centered overlay on top of everything -->
            <Border x:Name="StartupLabelContainer"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#E0252526"
                    BorderBrush="#803F3F46"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="16,10"
                    Opacity="0"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TranslateTransform Y="-10"/>
                </Border.RenderTransform>
                <TextBlock x:Name="StartupLabel"
                          Text="Powered by ACC - JJH @2025"
                          FontSize="13"
                          Foreground="#B0B0B0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>
