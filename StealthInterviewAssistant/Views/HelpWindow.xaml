<Window x:Class="StealthInterviewAssistant.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotkeys Help"
        Width="250"
        Height="Auto"
        SizeToContent="Height"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual">
    <Border Background="#CC1E1E1E"
            BorderBrush="#D03F3F46"
            BorderThickness="1"
            CornerRadius="8"
            Padding="12,8">
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center">
            <TextBlock Text="Hotkeys" 
                       FontSize="14" 
                       FontWeight="Bold"
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Ctrl+Shift+/" 
                       FontSize="11" 
                       Foreground="#B0B0B0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Send to WebView" 
                       FontSize="11" 
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,8"/>
            
            <TextBlock Text="Ctrl+Shift+J / Ctrl+Shift+L" 
                       FontSize="11" 
                       Foreground="#B0B0B0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Move Left / Right" 
                       FontSize="11" 
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,8"/>
            
            <TextBlock Text="Ctrl+Shift+I / Ctrl+Shift+K" 
                       FontSize="11" 
                       Foreground="#B0B0B0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Move Up / Down" 
                       FontSize="11" 
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,8"/>
            
            <TextBlock Text="Ctrl+Shift+R / Ctrl+Shift+T" 
                       FontSize="11" 
                       Foreground="#B0B0B0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Width Decrease / Increase" 
                       FontSize="11" 
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,8"/>
            
            <TextBlock Text="Ctrl+Shift+Q / Ctrl+Shift+A" 
                       FontSize="11" 
                       Foreground="#B0B0B0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Height Decrease / Increase" 
                       FontSize="11" 
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,8"/>
            
            <TextBlock Text="Ctrl+Shift+↓ / Ctrl+Shift+↑" 
                       FontSize="11" 
                       Foreground="#B0B0B0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Opacity Decrease / Increase" 
                       FontSize="11" 
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,8"/>
            
            <TextBlock Text="Ctrl+Shift+H" 
                       FontSize="11" 
                       Foreground="#B0B0B0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Toggle Visibility" 
                       FontSize="11" 
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            
            <TextBlock Text="Ctrl+Shift+P" 
                       FontSize="11" 
                       Foreground="#B0B0B0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Exit" 
                       FontSize="11" 
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            
            <TextBlock Text="Ctrl+Shift+." 
                       FontSize="11" 
                       Foreground="#B0B0B0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Screenshot" 
                       FontSize="11" 
                       Foreground="#E0E0E0"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,0"/>
        </StackPanel>
    </Border>
</Window>

